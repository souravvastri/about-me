{
  "name": "my-react-portfolio",
  "version": "1.0.0",
  "description": "My personal portfolio built with React and Tailwind CSS.",
  "main": "src/index.js",
  "homepage": "https://souravvastri.run.place",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && rm -rf docs/* && mv build/* docs/",
    "predeploy": "npm run build",
    "deploy": "git add docs && git commit -m 'Deploy to GitHub Pages' && git push origin main"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-router-dom": "^6.0.0",
    "react-scripts": "^5.0.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "autoprefixer": "^10.4.20",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "gh-pages": "^6.3.0",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
